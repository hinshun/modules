group default() {
	parallel docker npm go
}

fs docker() {
	lib "./docker"
	dockerPush "openllb/docker.hlb"
}

fs npm() {
	lib "./npm"
	dockerPush "openllb/npm.hlb"
}

fs go() {
	lib "./go"
	dockerPush "openllb/go.hlb"
}

fs lib(string dir) {
	scratch
	copy fs {
		local dir with option {
			includePatterns "*.hlb"
		}
	} "/" "/"
}
